@model AsposeTestTask.Web.Controllers.Person.Create.CreatePersonRequest

@{
    ViewData["Title"] = "CreatePerson";
}

<h1>Add New Person</h1>

<h4>Creation form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePerson" asp-controller="Person" method="post">
            <div class="form-group">
                <label asp-for="PersonName">Person Name:</label>
                <input asp-for="PersonName" class="form-control" name="PersonName" />
                <span asp-validation-for="PersonName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Salary">Salary:</label>
                <input asp-for="Salary" class="form-control" type="number" step="0.01" name="Salary" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfHire">Date of Hire:</label>
                <input asp-for="DateOfHire" class="form-control" type="date" name="DateOfHire" />
                <span asp-validation-for="DateOfHire" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Level">Role:</label>
                <select asp-for="Level" class="form-control" name="Level">
                    <option value="Employee">Employee</option>
                    <option value="Manager">Manager</option>
                    <option value="Sales">Sales</option>
                </select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CompanyId">Company:</label>
                <select asp-for="CompanyId" class="form-control" name="CompanyId">
                    @foreach (var company in Model.Companies)
                    {
                        <option value="@company.CompanyId">@company.CompanyName</option>
                    }
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add Person</button>
        </form>
        @if (ViewBag.PersonId != null)
        {
            <div>Result: Success! Person was added with Id: @ViewBag.PersonId</div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to list", "PersonList", "Person", null)
    @Html.ActionLink("Home", "Index", "Home", null)
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
