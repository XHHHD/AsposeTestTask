@model AsposeTestTask.Web.Controllers.Person.Query.QueryPersonPaymentVM

@{
    ViewData["Title"] = "CalculatePersonPayment";
}

<h1>Calculate Person Payment</h1>

<p>
    <strong>Person:</strong> @ViewBag.Person.PersonName
</p>
<p>
    <strong>Payment Date:</strong> @ViewBag.PaymentDate
</p>
<p>
    <strong>Payment:</strong> @Model.Payment
</p>

<div>
    <form method="get" action="@Url.Action("CalculatePersonPayment", "Person")">
        <input type="hidden" name="id" value="@Model.PersonId" />
        <label for="paymentDate">Payment Date:</label>
        <input type="date" name="paymentDate" id="paymentDate" value="@ViewBag.PaymentDate.ToString("yyyy-MM-dd")">
        <input type="submit" value="Calculate">
    </form>
</div>

<div>
    @Html.ActionLink("Back to Person List", "PersonList")
</div>
